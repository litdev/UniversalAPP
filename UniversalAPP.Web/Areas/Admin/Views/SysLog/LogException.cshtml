@model List<UniversalAPP.Entity.SysLogException>
@{
    ViewBag.Title = "系统异常日志列表";
}

<!--头部脚本-->
@section head
{

}
<!--头部脚本 end-->

<!-- Panel -->
@section nav
{
<div class="ibox-title">
    <h5>异常日志</h5>
    <div class="ibox-tools">
        <a class="collapse-link">
            <i class="fa fa-refresh" onclick="javascript: location.reload()"></i>
        </a>
    </div>
</div>
}
<!-- Panel end-->

<!-- 路径导航 -->
<div class="row">
    <div class="col-sm-4">
        <ol class="breadcrumb">
            <li><a href="/Admin/Home/Center">主页</a></li>
            <li><a href="/Admin/SysLog/LogException">操作日志</a></li>
            <li><strong>日志列表</strong></li>
        </ol>
    </div>

    <div style="height: 40px;"></div>
</div>
<!-- 路径导航 end --> 
<br />
@{ 
    var CanDel = (bool)ViewData["CanDel"];
}
<!--Main Body-->
@if (Model.Count > 0)
{
<div class="pull-center">
    @if (CanDel)
    {
        <button type="button" class="btn btn-white" onclick="del('all')"><i class="glyphicon glyphicon-trash"></i> 清空异常消息</button>
    }
    
</div>
}
<br />

@if(Model.Count > 0)
{
    @:<pre class="pre-scrollable" style="max-height: 440px;">
    foreach (var item in Model)
    {
        if (CanDel)
        {
            @:<button class="btn btn-danger btn-xs" onclick="del(@item.ID)"><i class="fa fa-times"></i></button>
        }
         @:<span class="label label-info">@item.AddTime</span> <span class="label label-primary">@item.Source</span>
         @:<span class="label label-warning">@item.Message</span>
         @item.StackTrace
         @:<br />
    }
    @:</pre>
}
else
{
<text>
<div class="middle-box text-center animated fadeInDown" style="margin-bottom:100px;margin-top:0px;">
    <h2 style="color: green;">无异常</h2>
    
</div>
</text>
}


<!-- Main Body end -->

@section foot
{
<script>
    function del(ids)
    {
        layer.confirm('Are You Sure？', { icon: 3 }, function (index) {
            layer.close(index);
            $.ajax({
                type: "post",
                url: "/Admin/SysLog/DelException",
                data: { "ids": ids },
                async: false,
                beforeSend: function () {

                },
                complete: function () {

                },
                success: function (data) {
                    if (data.msg == 1) {
                        layer.msg(data.msgbox, { icon: 1 });
                        window.location.reload();
                    }
                    else {
                        layer.msg(data.msgbox, { icon: 2 });
                    }
                },
                error: function () {
                    layer.msg("操作失败，请检查网络", { icon: 5 });
                }
            })
        });
    }
</script>
}
