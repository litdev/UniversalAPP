@model UniversalAPP.Web.Areas.Admin.Models.ViewModelLogMethod
@{
    ViewBag.Title = "系统操作日志列表";
}

<!--头部脚本-->
@section head
    {

}
<!--头部脚本 end-->
<!-- Panel -->
@section nav
    {
    <div class="ibox-title">
        <h5>操作日志</h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-refresh" onclick="javascript: location.reload()"></i>
            </a>
        </div>
    </div>
}
<!--Panel end-->
<!-- 路径导航 -->
<div class="row">
    <div class="col-sm-4">
        <ol class="breadcrumb">
            <li><a href="/Admin/Home/Center">主页</a></li>
            <li><a href="/Admin/SysLog/LogMethod">操作日志</a></li>
            <li><strong>日志列表</strong></li>
        </ol>
    </div>

    <div style="height: 40px;"></div>
</div>
<!-- 路径导航 end -->

<div class="row">
    <div class="col-sm-2">
        @if ((bool)ViewData["CanDel"])
        {
            <a class="btn btn-white" href="javascript:void(0)" onclick="del('/Admin/SysLog/DelMethod',1)"><i class="glyphicon glyphicon-trash"></i> 删除</a>
        }
    </div>
    <div class="col-sm-4">
        <p></p>
    </div>
    <div class="col-sm-2">
        @Html.DropDownListFor(p => p.type, ViewData["LogMethod_Type"] as List<SelectListItem>, new { @class = "input-sm form-control", onchange = "WordSearch()" })
    </div>
    <div class="col-sm-4">
        <div class="input-group">
            <input type="text" id="txt_word" value="@Model.word" placeholder="关键字" onkeydown="KeyDown('WordSearch()')" class="input-sm form-control">
            <span class="input-group-btn">
                <button type="button" class="btn btn-sm btn-info" onclick="WordSearch()"> 搜索</button>
            </span>
        </div>
    </div>
</div>
<br>

<!--Main Body-->

<input type="hidden" id="hid_order_by" value="@ViewData["OrderBy"]" />
<input type="hidden" id="hid_order_by_key" value="@ViewData["CookieKey_OrderBy"]" />

@if (Model.DataList.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        <input type="checkbox" onclick="CheckAll(this)" txt="全选">
                    </th>
                    <th>ID</th>
                    <th>操作用户</th>
                    <th>类别</th>
                    <th>详情</th>
                    <th class="sort_attr" s-name="AddTime">操作时间</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.DataList)
                {
                    <tr>
                        <td>
                            <input type="checkbox" class="datacheck" hid="@item.ID">
                        </td>
                        <td>@item.ID</td>
                        <td>@item.SysUser.UserName</td>
                        <td>@item.TypeStr</td>
                        <td>@item.Detail</td>
                        <td>@item.AddTime</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="am-cf">
            每页 <input type="number" cname="@ViewData["CookieKey_PageSize"]" value="@Model.page_size" id="txt_page_size" style="width:40px;" onchange="SetPageSize(this)" /> 条数据 共 @Model.total 条记录
            <div class="pull-right">
                <div id="pager"></div>
            </div>
        </div>
    </div>

}
else
{
    <p id="pager"><h2>没有相关数据</h2></p>
}
<!-- Main Body end -->
<!--底部脚本-->
@section foot
    {
    <script src="~/lib/layer/laypage/laypage.js"></script>
    <script src="~/js/admin/index_column_order_by.js"></script>
    <script>
        function WordSearch()
        {
            location.href = "?page=1&type="+$("#type").val()+"&word="+encodeURIComponent($("#txt_word").val());
        }

        laypage({
            cont: 'pager',
            pages: @Model.total_page,
            skin:"#0e90d2",
            curr: function () {
                var page = location.search.match(/page=(\d+)/);
                return page ? page[1] : 1;
            }(),
            jump: function (e, first) { //触发分页后的回调
                if (!first) { //一定要加此判断，否则初始时会无限刷新
                    location.href = '?page=' + e.curr + "&type=" + $("#type").val() + "&word=" + encodeURIComponent($("#txt_word").val());
                }
            }
        });
    </script>
}

<!--底部脚本 end-->
