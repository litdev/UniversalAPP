@model UniversalAPP.Web.Areas.Admin.Models.ViewModelAppVersion
@{
    ViewBag.Title = "APP版本列表";
}

<!--头部脚本-->
@section head
    {

}
<!--头部脚本 end-->
<!-- Panel -->
@section nav
    {
    <div class="ibox-title">
        <h5>APP版本</h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-refresh" onclick="javascript: location.reload()"></i>
            </a>
        </div>
    </div>
}
<!-- Panel end -->
<!--路径导航-->
<div class="row">
    <div class="col-sm-4">
        <ol class="breadcrumb">
            <li><a href="/Admin/Home/Center">主页</a></li>
            <li><a href="/Admin/AppVersion/Index">APP版本列表</a></li>
            <li><strong>用户组列表</strong></li>
        </ol>
    </div>

    <div style="height: 40px;"></div>
</div>
<!--路径导航 end -->

<div class="row">
    <div class="col-sm-4">
        <a class="btn btn-white" href="javascript:void(0)" onclick="del('/Admin/AppVersion/Del',1,'确定删除？')"><i class="glyphicon glyphicon-trash"></i> 删除</a>
        <div class="btn-group">
            <button type="button" data-toggle="dropdown" class="btn btn-white dropdown-toggle" aria-haspopup="true" aria-expanded="false">
                <i class="glyphicon glyphicon-plus"></i> 添加 <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li>
                    <a href="@Url.Action("EditAndroid", "AppVersion", new { Area = "Admin" })"><i class="fa fa-android"></i> 安卓版</a>
                </li>
                <li>
                    <a href="@Url.Action("EditIOS", "AppVersion", new { Area = "Admin" })"><i class="fa fa-apple"></i> 苹果版</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="col-sm-2">
        <p></p>
    </div>
    <div class="col-sm-4">
    </div>
    <div class="col-sm-2">
        @Html.DropDownListFor(p => p.platform, ViewData["PlatformsList"] as List<SelectListItem>, new { @class = "input-sm form-control", onchange = "WordSearch()" })
    </div>
</div>
<br>

<!--Main Body-->

<input type="hidden" id="hid_order_by" value="@ViewData["OrderBy"]" />
<input type="hidden" id="hid_order_by_key" value="@ViewData["CookieKey_OrderBy"]" />

@if (Model.DataList.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        <input type="checkbox" onclick="CheckAll(this)" txt="全选">
                    </th>
                    <th>ID</th>
                    <th>平台</th>
                    <th>类别</th>
                    <th>版本号</th>
                    <th>升级号</th>
                    <th class="sort_attr" s-name="AddTime">添加时间</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.DataList)
                {
                    <tr>
                        <td>
                            <input type="checkbox" class="datacheck" hid="@item.ID">
                        </td>
                        <td>@item.ID</td>
                        <td><i class="@item.PlatformsLog"></i></td>
                        <td>@item.APPTypeStr</td>
                        <td>@item.Version</td>
                        <td>@item.VersionCode</td>
                        <td>@item.AddTime</td>
                        <td>
                            <a class="btn btn-sm btn-white" href="/Admin/AppVersion/@(item.Platforms == UniversalAPP.Entity.APPVersionPlatforms.Android ? "EditAndroid" : "EditIOS")?id=@item.ID"><i class="glyphicon glyphicon-edit"></i> 修改</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="am-cf">
            每页 <input type="number" cname="@ViewData["CookieKey_PageSize"]" value="@Model.page_size" id="txt_page_size" style="width:40px;" onchange="SetPageSize(this)" /> 条数据 共 @Model.total 条记录
            <div class="pull-right">
                <div id="pager"></div>
            </div>
        </div>
    </div>


}
else
{
    <p id="pager"><h2>没有相关数据</h2></p>
}

<!-- Main Body end -->
<!--底部脚本-->
@section foot
    {
    <script src="~/lib/layer/laypage/laypage.js"></script>
    <script src="~/js/admin/index_column_order_by.js"></script>
    <script type="text/javascript">

        function WordSearch()
        {
             location.href = "?page=1&platform=" + $("#platform").val();
        }

        laypage({
            cont: 'pager',
            pages: @Model.total_page,
            skin:"#0e90d2",
            curr: function () {
                var page = location.search.match(/page=(\d+)/);
                return page ? page[1] : 1;
            }(),
            jump: function (e, first) { //触发分页后的回调
                if (!first) { //一定要加此判断，否则初始时会无限刷新
                    location.href = '?page=' + e.curr + "&platform=" + $("#platform").val();
                }
            }
        });
    </script>
}

<!--底部脚本 end-->